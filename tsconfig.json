{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": false,
    "target": "es2015",
    "types": []
  },
  "include": ["src/*"]
}
